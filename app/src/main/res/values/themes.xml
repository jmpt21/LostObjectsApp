<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.LostObjectsApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/light_primary</item>
    </style>

    <style name="ThemeAppBar" parent="Base.Theme.LostObjectsApp">
        <item name="colorPrimary">@color/light_primary</item>
        <item name="android:backgroundTint">@color/light_primary</item>
        <item name="android:text">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
    </style>
    
    <style name="Theme.LostObjectsApp" parent="Base.Theme.LostObjectsApp"/>
    <style name="Theme.LostObjectsApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.LostObjectsApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="Theme.LostObjectsApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
</resources>